<!-- 配信メール対象一覧  -->
<h1><%= getLongName('table_name','delivery_mail_targets')%> 一覧</h1>
<table class="show_table">
  <tr>
    <th><%= getLongName('business_partners', 'business_partner_name') %></th>
    <th><%= getLongName('bp_pics', 'bp_pic_name') %></th>
    <% if @delivery_mail.mail_status_type == 'unsend' %>
      <th>削除</th>
    <% end %>
  </tr>
  <tr>
    <% @delivery_mail.delivery_mail_targets.each do |delivery_mail_target| %>
      <tr>
        <td><%=
          link_to delivery_mail_target.bp_pic.business_partner.business_partner_name,
            :controller => :business_partner,
            :action => :show,
            :id => delivery_mail_target.bp_pic.business_partner_id
        %></td>
        <td><%=
          link_to delivery_mail_target.bp_pic.bp_pic_name,
            :controller => :bp_pic,
            :action => :show,
            :id => delivery_mail_target.bp_pic_id
        %></td>
        <% if @delivery_mail.mail_status_type == 'unsend' %>
          <td><%=
            link_to "削除",
              :controller => :delivery_mail_targets,
              :action => :delete,
              :id => delivery_mail_target.id,
              :method => :delete
          %></td>
        <% end %>
      </tr>
    <% end %>
  </tr>
</table>

<%= back_to_link '編集', edit_delivery_mail_path(@delivery_mail) %> |
<%= link_to '削除', @delivery_mail, method: :delete, data: { confirm: '削除します。よろしいですか?' } %> |
<%= link_or_back '戻る', delivery_mails_path %>

